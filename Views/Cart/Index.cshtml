@using Azure.Core;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model List<BaoCaoTTCM.Models.CartItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<div class="wrap-header-cart js-panel-cart">
	<div class="s-full js-hide-cart"></div>

	<div class="header-cart flex-col-l p-l-65 p-r-25">
		<div class="header-cart-title flex-w flex-sb-m p-b-8">
			<span class="mtext-103 cl2">
				Your Cart
			</span>

			<div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
				<i class="zmdi zmdi-close"></i>
			</div>
		</div>

		<div class="header-cart-content flex-w js-pscroll">
			@await Component.InvokeAsync("HeaderCart")

			
		</div>
	</div>
</div>


<!-- breadcrumb -->
<div class="container">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
			Home
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<span class="stext-109 cl4">
			Shoping Cart
		</span>
	</div>
</div>


<!-- Shoping Cart -->
<form method="post" class="bg0 p-t-75 p-b-85">
	<div class="container">
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				@if(Model !=null && Model.Count() > 0)
				{
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
								<th class="column-1">Product</th>
									<th class="column-2"></th>
									<th class="column-3">Price</th>
									<th class="column-4">Quantity</th>
									<th class="column-5">Total</th>
									<th class="column-6">Remove</th>
								</tr>
								@if (Model != null && Model.Count() > 0)
								{
									foreach (var item in Model)
									{
										<tr class="table_row">
											<td class="column-1">
												<div class="how-itemcart1">
													<img src="@Url.Content("../images/" + item.Anh)" alt="IMG">
												</div>
											</td>
											<td class="column-2">
												@item.Name
											</td>
											<td class="column-3">
												@item.Gia
											</td>
											<td class="column-4">
												<div class="wrap-num-product flex-w m-l-auto m-r-0">
													<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
														<i class="fs-16 zmdi zmdi-minus"></i>
													</div>
													<input type="hidden" name="id" value="@item.Id" />
													<input id="quantity" class="mtext-104 cl3 txt-center num-product quantity" type="number" name="number"  value="@item.SoLuong" />

													<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
														<i class="fs-16 zmdi zmdi-plus"></i>
													</div>
												</div>
											</td>
											<td class="column-5">@item.Total</td>
									        <td class="column-6">
												<button data-id="@item.Id" onclick="removeCartItem(this)">Xóa</button>
											</td>
										</tr>
									}
								}

							</table>
						</div>

						<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
							@if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
							{
								<div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
									<a class="btn-update" asp-controller="Cart" asp-action="Checkout" >Thanh Toán</a>
								</div>
							}
						</div>
					</div>
				}
				else
				{
					<p>Chưa có hàng hóa trong giỏ hàng</p>
				}

			</div>

			
		</div>
	</div>
</form>

<script>
function removeCartItem(btn) {
  var id = $(btn).data('id');
  $(btn).prop('disabled', true); // disable button
  $.ajax({
    type: 'POST',
    url: '/Cart/Remove',
    data: { id: id },
    success: function (response) {
      if (response.success) {
        // Xóa sản phẩm khỏi giao diện
        $(btn).remove();
        location.reload(); // reload page after removing item
      } else {
        alert('Lỗi xóa sản phẩm');
      }
    },
    error: function () {
      alert('Lỗi xóa sản phẩm');
    }
  });
}


	// Define the updateCartItem function
	function updateCartItem(btn) {
		// Get the ID and quantity of the item to update
		var id = $(btn).data('id');
		var quantity = $(btn).closest('tr').find('.quantity').val();

		// Send an AJAX request to update the cart
		$.ajax({
			url: '/Cart/Update',
			type: 'POST',
			data: { id: id, quantity: quantity },
			success: function (data) {
				if (data.success) {
					// Update the quantity on the page
					$('.quantity[data-quantity="' + data.quantity + '"]').val(data.quantity);
				} else {
					alert(data.message);
				}
			},
			error: function () {
				alert('An error occurred while updating the cart');
			}
		});
	}


</script>







