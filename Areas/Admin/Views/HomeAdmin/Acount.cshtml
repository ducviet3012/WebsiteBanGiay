@using BaoCaoTTCM.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Acount";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Acount</h1>
<p>@TempData["Message"]</p>
<p>
    <a asp-action="ThemAcount">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                Username
            </th>
            <th>
                Password
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
               @{
            int i = 0;
            string @cls = "table-success";
        }

@foreach (var item in Model) {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }
            <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="SuaAcount" asp-route-user="@item.UserName">Edit</a> |
                <a asp-action="XoaAcount" asp-route-user="@item.UserName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div style="margin: 0 auto">
    @Html.PagedListPager(Model,page => Url.Action("acount", new {page=page, maloai = ViewBag.maloai}),new X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses = new List<String> {"page-item"},
    PageClasses = new List<String> {"page-link"}
    })
</div>