@model List<BaoCaoTTCM.Models.CartItem>
@{
	double sum = 0;
}
@if(Model != null && Model.Count() > 0)
{
	<ul style="display:inline-block;" class="header-cart-wrapitem w-full">
		@foreach(var item in Model)
		{
		<li class="header-cart-item flex-w flex-t m-b-12">
			<div class="header-cart-item-img">
					<img src="@Url.Content("../images/" + item.Anh)" alt="IMG">
		    </div>

			<div class="header-cart-item-txt p-t-8">
				<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
					@item.Name
				</a>

				<span class="header-cart-item-info">
						@item.SoLuong x @item.Gia.ToString("#,##0") VND
				</span>
			</div>
		</li>
			sum = sum + item.Total;
		}
	</ul>
	<div class="w-full">
		<div class="header-cart-total w-full p-tb-40">
			Total: @sum.ToString("#,##0") VND
		</div>

		<div class="header-cart-buttons flex-w w-full">
			<a asp-controller="Cart" asp-action="Index" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
				View Cart
			</a>

			<a asp-controller="Access" asp-action="Login" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
				Check Out
			</a>
		</div>
	</div>
}
else
{
	<p>Giỏ hàng rỗng</p>
}
