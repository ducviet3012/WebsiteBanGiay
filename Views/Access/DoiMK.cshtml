@{
    Layout = null;
}
@using BaoCaoTTCM.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ChangePassword
@*@model (List<BarChartViewModel> a,List<BarChartViewModel> a1)*@
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <h1 style="color:#e83bf5">Change Password</h1>
                            </div>
                            @TempData["DKTB"]
                            @using (Html.BeginForm("DoiMK", "Access", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @*<input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">*@
                                    @Html.TextBoxFor(x=>x.OldPassword, new {@class="form-control form-control-lg",placeholder="Mật khẩu hiện tại",required="required",autofocus="autofocus"})
                                </div>
                                <div class="form-group">
                                    @*                                    <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">*@
                                    @Html.TextBoxFor(x=>x.NewPassword, new {@class="form-control form-control-lg",placeholder="Mật khẩu mới",type="password",required="required",autofocus="autofocus"})
                                </div>
                                <div class="form-group">
                                    @*<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">*@
                                    @Html.TextBoxFor(x=>x.ConfirmPassword, new {@class="form-control form-control-lg",type="password",placeholder="Xác nhận mật khẩu"})
                                </div>
                                <p>@TempData["SuccessMessage"]</p>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn d-inline-block mx-2" type="submit">SAVE</button>
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn d-inline-block mx-2">BACK</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>